generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             Int       @id @default(autoincrement())
  loginId        String    @unique               // логин (и для админа, и для юзеров)
  password       String                           // хэш пароля
  plainPassword  String?                          // открытый пароль, показываемый админке
  role           String    @default("USER")       // "ADMIN" | "USER"
  profile        Json?                             // тут храним все: adminNoteName, nameOnSite, idOnSite, residence, photoUrl, codeConfig...
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt

  sentMessages     Message[] @relation("MessageFrom")
  receivedMessages Message[] @relation("MessageTo")
}

model Message {
  id        Int      @id @default(autoincrement())
  fromId    Int
  toId      Int
  text      String
  createdAt DateTime @default(now())

  from User @relation("MessageFrom", fields: [fromId], references: [id])
  to   User @relation("MessageTo", fields: [toId], references: [id])
}
